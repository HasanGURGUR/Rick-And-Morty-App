<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>


        <variable
            name="characters"
            type="hasan.gurgur.rickandmorty.model.Result" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.detail.DetailFragment">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            app:cardCornerRadius="15dp">

            <ImageView
                loadImage="@{characters.image}"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="fitXY"
                tools:background="@color/black" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@{characters.name}"
            android:textColor="@color/black"
            android:textSize="33sp"
            tools:text="Character Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
           >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="50dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status     : "
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Species  : "
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender   : "
                    android:layout_gravity="left"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="50dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{characters.status}"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    statusColor="@{characters.status}"
                    android:layout_gravity="right"
                    tools:text="status" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{characters.species}"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_gravity="right"
                    tools:text="species" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{characters.gender}"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_gravity="right"
                    genderColor="@{characters.gender}"
                    tools:text="gender" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>